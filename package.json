  },
  "dependencies": {
    "@types/mongoose": "^5.11.96",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "ethers": "^6.13.1",
    "express": "4.19.2",
    "ipfs-http-client": "^60.0.1",
    "mongoose": "^8.17.2",
    "multer": "1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "uuid": "9.0.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/multer": "1.4.12",
    "@types/node": "22.7.5",
    "tsx": "4.19.1",
    "typescript": "5.6.3"
  }
}
